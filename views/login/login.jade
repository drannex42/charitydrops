extends ../layout

block content
  center
      .page-header
        h3 Sign in
    center
        h1 Let's make the world better. 
        | <br><br>
        a.button.btn.btn.btn-primary(href='/auth/facebook')
                | Register with Facebook
        | <br>
        a.button.btn.btn.btn-sm-primary(href='/about')
            | Learn more about how it works
    form(method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .col-sm-8.col-sm-offset-2
        .form-group
          label.control-label(for='email') Email
          input.form-control(type='text', name='email', id='email', placeholder='Email', autofocus=true)
        .form-group
          label.control-label(for='password') Password
          input.form-control(type='password', name='password', id='password', placeholder='Password')
        .form-group
          button.btn.btn-primary(type='submit')
            span.ion-android-hand
            | Login
        a.btn.btn-link(href='/forgot') Forgot your password?